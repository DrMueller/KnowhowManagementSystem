<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Mmu.Kms.WpfUI.Areas.FileManagement.UserControls.FileDisplay">

    <DataTemplate x:Key="DisplayItemTemplate" DataType="{x:Type local:FileDisplayItemViewModel}">
        <StackPanel Orientation="Horizontal">
            <Image
                x:Name="Img"
                Height="15"
                HorizontalAlignment="Left"
                Source="{Binding Icon, Mode=OneWay}"
                RenderTransformOrigin="0.5,0.5"
                Width="15" />

            <Label Content="{Binding FileName, Mode=OneWay}" />
            <Label Content="{Binding FileTagsDescription, Mode=OneWay}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>